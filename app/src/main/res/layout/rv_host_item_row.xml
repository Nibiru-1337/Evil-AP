<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_host_item_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:gravity="center"
    android:includeFontPadding="false"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    >

    <ImageView
        android:id="@+id/rvHostIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/ic_laptop_white_24dp"
        />
    <LinearLayout
        android:id="@+id/rvLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rvHostIcon"
        android:background="@color/colorAccent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/rvHostIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="top"
            android:text="1923123123"
            />
        <TextView
            android:id="@+id/rvHostMAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:gravity="bottom"
            android:text="deadbeef"
             />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Button" />
</RelativeLayout>